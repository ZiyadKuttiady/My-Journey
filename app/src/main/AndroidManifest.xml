<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ziyadkuttiady.myjourney">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="q">
        <activity android:name="com.ziyadkuttiady.myjourney.SettingsActivity" />
        <activity android:name="com.ziyadkuttiady.myjourney.AboutActivity" />
        <activity android:name="com.ziyadkuttiady.myjourney.EditHistoryActivity" />
        <activity
            android:name="com.ziyadkuttiady.myjourney.HomeScreenActivity"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.ziyadkuttiady.myjourney.PersonalDataCollectActivity" />
        <activity android:name="com.ziyadkuttiady.myjourney.AddVisitActivity" />
        <activity android:name="com.ziyadkuttiady.myjourney.OnBoardingActivity" />
        <activity android:name="com.ziyadkuttiady.myjourney.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>