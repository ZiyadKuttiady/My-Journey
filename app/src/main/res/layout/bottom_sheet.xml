<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical"
    android:padding="@dimen/default_padding_8"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_margin_16"
            android:orientation="vertical">

            <!--                <TextView-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_marginBottom="@dimen/default_margin_16"-->
            <!--                    android:gravity="center"-->
            <!--                    android:text="@string/add_visit"-->
            <!--                    android:theme="@style/label" 
                android:layout_marginBottom="@dimen/label_margin_bottom"-->
            <!--                    android:textSize="@dimen/headline"-->
            <!--                    android:textStyle="bold" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_16"
                android:text="@string/starting_point"
                android:theme="@style/sub_header" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:text="@string/place"
                android:theme="@style/label" />

            <EditText
                android:id="@+id/editTextStartingPointPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_16"
                android:background="@drawable/edit_text_background"
                android:clickable="false"
                android:drawableEnd="@drawable/ic_map_pin"
                android:focusable="false"
                android:hint="@string/place_hint"
                android:inputType="text"
                android:padding="@dimen/padding_12"
                android:textColorHint="@color/colorGray" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_16"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/label_margin_bottom"
                        android:text="@string/date"
                        android:theme="@style/label" />

                    <EditText
                        android:id="@+id/editTextStartingPointDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:clickable="true"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:focusable="false"
                        android:hint="@string/date_hint"
                        android:inputType="date"
                        android:padding="@dimen/padding_12"
                        android:textColorHint="@color/colorGray" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/label_margin_bottom"
                        android:text="@string/time"
                        android:theme="@style/label" />

                    <EditText
                        android:id="@+id/editTextStartingPointTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:clickable="true"
                        android:drawableEnd="@drawable/ic_clock"
                        android:focusable="false"
                        android:hint="@string/time_hint"
                        android:inputType="time"
                        android:padding="@dimen/padding_12"
                        android:textColorHint="@color/colorGray" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_16"
                android:text="@string/destination"
                android:theme="@style/sub_header" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:text="@string/place"
                android:theme="@style/label" />

            <EditText
                android:id="@+id/editTextDestinationPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_16"
                android:background="@drawable/edit_text_background"
                android:clickable="false"
                android:drawableEnd="@drawable/ic_map_pin"
                android:focusable="false"
                android:hint="@string/place_hint"
                android:inputType="text"
                android:padding="@dimen/padding_12"
                android:textColorHint="@color/colorGray" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_16"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/label_margin_bottom"
                        android:text="@string/date"
                        android:theme="@style/label" />

                    <EditText
                        android:id="@+id/editTextDestinationDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:clickable="true"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:focusable="false"
                        android:hint="@string/date_hint"
                        android:inputType="date"
                        android:padding="@dimen/padding_12"
                        android:textColorHint="@color/colorGray" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/label_margin_bottom"
                        android:text="@string/time"
                        android:theme="@style/label" />

                    <EditText
                        android:id="@+id/editTextDestinationTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:clickable="true"
                        android:drawableEnd="@drawable/ic_clock"
                        android:focusable="false"
                        android:hint="@string/time_hint"
                        android:inputType="time"
                        android:padding="@dimen/padding_12"
                        android:textColorHint="@color/colorGray" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:text="@string/purpose"
                android:theme="@style/label" />

            <EditText
                android:id="@+id/editTextPurpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_16"
                android:background="@drawable/edit_text_background"
                android:clickable="false"
                android:focusable="false"
                android:hint="@string/attend_an_event"
                android:inputType="text"
                android:lines="1"
                android:padding="@dimen/padding_12"
                android:textColorHint="@color/colorGray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:text="@string/vehicle_type"
                android:theme="@style/label" />

            <RadioGroup
                android:id="@+id/radioButtonGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_16"
                android:clickable="false"
                android:focusable="false"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/radioButtonPrivate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/label_margin_bottom"
                    android:layout_weight="1"
                    android:buttonTint="@color/grey_900"
                    android:checked="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="@string/private_radio"
                    android:theme="@style/label" />

                <RadioButton
                    android:id="@+id/radioButtonPublic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/label_margin_bottom"
                    android:layout_weight="1"
                    android:buttonTint="@color/grey_900"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="@string/public_radio"
                    android:theme="@style/label" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:text="@string/vehicle_category"
                android:theme="@style/label" />

            <EditText
                android:id="@+id/editTextVehicleCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_16"
                android:background="@drawable/edit_text_background"
                android:clickable="false"
                android:focusable="false"
                android:hint="@string/bus"
                android:inputType="text"
                android:lines="1"
                android:padding="@dimen/padding_12"
                android:textColorHint="@color/colorGray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:text="@string/vehicle_registration_number"
                android:theme="@style/label" />

            <EditText
                android:id="@+id/editTextVehicleNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_16"
                android:background="@drawable/edit_text_background"
                android:clickable="false"
                android:focusable="false"
                android:hint="@string/kl_01_a_2020"
                android:inputType="textCapCharacters"
                android:lines="1"
                android:padding="@dimen/padding_12"
                android:textColorHint="@color/colorGray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:text="@string/description"
                android:theme="@style/label" />

            <EditText
                android:id="@+id/editTextDesc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="@dimen/default_margin_16"
                android:background="@drawable/edit_text_background"
                android:clickable="false"
                android:focusable="false"
                android:gravity="start"
                android:hint="@string/notes_here"
                android:inputType="text"
                android:padding="@dimen/padding_12"
                android:textColorHint="@color/colorGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_padding_8"
                    android:background="@drawable/button_background_delete"
                    android:text="@string/delete"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDanger"
                    android:theme="@style/button" />

                <Button
                    android:id="@+id/buttonEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_padding_8"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="@string/edit_my_journey"
                    android:textAllCaps="false"
                    android:theme="@style/button" />

            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>