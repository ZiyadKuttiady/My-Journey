<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/list_item_background"
    android:padding="@dimen/default_padding_16"
    android:layout_margin="@dimen/margin_8">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/next"
        android:src="@drawable/ic_group_33" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/default_padding_16"
            android:paddingEnd="@dimen/default_padding_16"
            android:textColor="@color/colorTextHead"
            android:textSize="@dimen/sub_header"
            android:text="Kozhikkode - Kuttiady" />

        <TextView
            android:id="@+id/tvItemDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/default_padding_16"
            android:textSize="@dimen/caption"
            android:text="04:00 PM - 05:00 PM" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/next"
        android:src="@drawable/ic_next" />

</LinearLayout>